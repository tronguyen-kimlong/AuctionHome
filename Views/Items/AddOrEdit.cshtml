@model AuctionHome.Models.Item

@{
    ViewData["Title"] = "Create";
    Layout = null;
    int idItem = 0;
    if(Model != null)
    {
        idItem = Model.Id;
    }
}


@*<form asp-action="AddOrEditBook" asp-route-id="@Model.IdBook" onsubmit="return ajaxPostBook(this);" autocomplete="off">*@

     @*onsubmit="return ajaxPost(this);" autocomplete="off"*@
<h1>@ViewBag.Error</h1>
<h1>@ViewData["Error"]</h1>
<div class="row">
    <div class="col-md-12 d-flex justify-content-around" >
        <form asp-action="AddOrEdit" asp-route-id="@idItem" enctype="multipart/form-data" onsubmit="return ajaxPost(this);" autocomplete="off">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                 <div class="col-md-6">
                    <label asp-for="IdCategory" class="control-label"></label>
                    <select asp-for="IdCategory" class ="form-control" asp-items="ViewBag.IdCategory"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="IdUser" class="control-label"></label>
                    <select asp-for="IdUser" class ="form-control" asp-items="ViewBag.IdUser"></select>
                </div>
            </div>
            <div class="form-group">
                
                <label asp-for="ImageItems" class="control-label"></label>
                <input asp-for="ImageItems" type = "file" multiple accept="image/*" class="form-control" />
                <span asp-validation-for="ImageItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAccept" /> @Html.DisplayNameFor(model => model.IsAccept)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSold" /> @Html.DisplayNameFor(model => model.IsSold)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPaid" /> @Html.DisplayNameFor(model => model.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceBuyNow" class="control-label"></label>
                <input asp-for="PriceBuyNow" class="form-control" />
                <span asp-validation-for="PriceBuyNow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceAuction" class="control-label"></label>
                <input asp-for="PriceAuction" class="form-control" />
                <span asp-validation-for="PriceAuction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auction2" class="control-label"></label>
                <input asp-for="Auction2" class="form-control" />
                <span asp-validation-for="Auction2" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/site.js"></script>
