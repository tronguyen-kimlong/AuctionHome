@using AuctionHome.Library
@model AuctionHome.Models.Item

@{
    // authenticate Username;
    string authUser = null;
    foreach(var claim in User.Claims) 
    { 
        if(claim.Type=="username" && claim.Value == Model.IdUser)
        {
            authUser = claim.Value;
        }
       
    }
}

